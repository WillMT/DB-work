
@model MVC_web.Models.DB.Models.itemViewModel

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order</h2>
<div class="container">
    <ul class="nav nav-tabs justify-content-center nav-justified" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active h4" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Drink</a>
        </li>
        <li class="nav-item">
            <a class="nav-link h4" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Food</a>
        </li>
    </ul>
    <br />
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row ">
                @foreach (var item in Model.DrinkList)
                {
                    <div class=" card col-sm-6 col-md-4 " style="width: 18rem;">
                        <p></p>
                        <div class="thumbnail">
                            @if (item.imgdata != null)
                            {
                                var base64 = Convert.ToBase64String(item.imgdata);
                                var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);
                                <img src="@imgsrc"  class=" card-img-top rounded img-fluid" alt="Responsive image" />
                            }
                            else
                            {
                                <p class="card-img-top">no image</p>
                            }
                        </div>

                        <div class="card-body">
                            <h3 class="text-center">@item.itemName</h3>
                            <blockquote class="blockquote text-center">
                                Price : $@item.iPrice /
                                Stock Qty :@item.qty
                            </blockquote>
                            <p>
                                @Html.ActionLink("Add to cart", "", "", null, new { @class = "btn btn-warning btn-sm btn-block" })
                            </p>
                        </div>
                    </div>
                }
            </div>
            <div></div>

        </div>

        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row ">
                @foreach (var item in Model.FoodList)
                {
                <div class=" card col-sm-6 col-md-4 ">
                    <div class="thumbnail">
                        @if (item.imgdata != null)
                        {
                            var base64 = Convert.ToBase64String(item.imgdata);
                            var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);
                            <img src="@imgsrc" class="card-img-top" class="rounded" />
                        }
                        else
                        {
                            <p class="card-img-top">no image</p>
                        }
                    </div>
                    <div class="card-body">
                        <h3 class="text-center">@item.itemName</h3>
                        <blockquote class="blockquote text-center">
                            Price : $@item.iPrice /
                            Stock Qty :@item.qty
                        </blockquote>
                        <p>
                            @Html.ActionLink("Add to cart", "", "", null, new { @class = "btn btn-warning btn-sm btn-block" })
                        </p>
                    </div>
                </div>
                }
            </div>
            <div></div>
        </div>

    </div>
</div>


</table>
