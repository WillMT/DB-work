
@model List<MVC_web.Models.DB.Item>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order</h2>

<div class="row ">
    @foreach (var item in this.Model)
    {
        <div class="col-sm-6 col-md-4 ">
            <div class="thumbnail">
                @if (item.imgdata != null)
                {
                    var base64 = Convert.ToBase64String(item.imgdata);
                    var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);
                    <img src="@imgsrc" width="150px" class="rounded" />
                }
                else
                {
                    <p>no image</p>
                }
            </div>
            <div class="caption">
                <h4>@item.itemName</h4>
                <p>Price :@item.iPrice</p>
                <p>Stock :@item.qty</p>
                <p>
                    <a href="#" class="btn btn-ouline-warning" role="button">Add To Cart</a>
                    <a href="#" class="btn btn-ouline-warning" role="button">item info</a>
                </p>
            </div>
        </div>
    }
</div>

</table>
