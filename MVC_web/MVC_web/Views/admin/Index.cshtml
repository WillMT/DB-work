@model MVC_web.Models.DB.admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class="row">
            <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
                <div class="row">
                    <div class="col-lg-8 col-md-8 mx-auto">
                        <div class="card rounded shadow shadow-sm">
                            

                            <div class="card-header">
                                <h2 class="mb-0 text-center">Cafe Bouquet</h2>
                                <h2 class="mb-0 text-center">Management Login portal</h2>
                            </div>
                            <div class="card-body">
                                
                                <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                    <div class="form-group">
                                        @Html.ActionLink("Item Management", "Index", "item", null, new { @class = "btn btn-info btn-sm btn-block" })
                                    </div>
                                    <div class="form-group">
                                        @Html.ActionLink("Check order", "OrderInfo", "Order", null, new { @class = "btn btn-info btn-sm btn-block" })
                                    </div>
                                        
                                    <div>
                                        <label class="custom-control custom-checkbox">
                                        </label>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}