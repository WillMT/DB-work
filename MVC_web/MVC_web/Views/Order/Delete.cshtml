@model MVC_web.Models.DB.Models.OrderViewModel

@{
    ViewBag.Title = "Delet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cart = MVC_web.Models.DB.Models.cartFunction.GetCurrCart();
}

<h2 class="text-center">Remove your Order</h2>
<h5 class="text-center text-warning">All the item will remove once you have summit.</h5>

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="text-center">Please input customer info for your order</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.Label("Order ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                  <input type="number" name="id" />
            </div>
        </div>
        <div class="col-md-offset-2 ">
            <input type="submit" id="btnUpload" value="Upload" class="btn btn-warning btn-block" required />
        </div>
    </div>

}