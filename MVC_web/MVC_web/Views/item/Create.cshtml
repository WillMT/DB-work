@model MVC_web.Models.DB.Item

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h2 class="text-success">Add new item</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        <div class="col-sm-2">
            <label for="ItemType"><b>Item type</b></label>
        </div>
        <div class="col-md-10">
            @Html.DropDownList("ItemType", (IEnumerable<SelectListItem>)ViewBag.itemList)
            @Html.ValidationMessageFor(model => model.itemType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="itemName"><b>Item Name</b></label>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.itemName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="iDesc"><b>Item Discription</b></label>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.iDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.iDesc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="iStatus"><b>Status</b></label>
        </div>
        <div class="col-md-10">
            @Html.DropDownList("iStatus", (IEnumerable<SelectListItem>)ViewBag.YNList)
            @Html.ValidationMessageFor(model => model.iStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="iPrice"><b>Price</b></label>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.iPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.iPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="qty"><b>Quantity</b></label>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.qty, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Create" class="btn btn-primary btn-block" />
        </div>
    </div>
</div>
}
<hr />
<div>
    @Html.ActionLink("Return to item List", "Index","item", new { @class = "btn btn-info btn-block" })
</div>
